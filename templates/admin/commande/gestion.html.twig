{% extends "base.html.twig" %}

{% block title %}Gestion des commandes{% endblock %}

{% block body %}

<h1 class="mb-4 text-center mt-4">Gestion des commandes</h1>

<table class="container col-4 mt-4 table table-dark table-striped">
<thead>
    <tr>
        <th>#</th>
        <th>Membre</th>
        <th>Produit</th>
        <th>Quantité</th>
        <th>Montant</th>
        <th>Etat</th>
        <th>Date d'enregistrement</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
 {% for commande in commandes %}
        
        <tr>
            <td>{{ commande.id }}</td>
            <td>{{ commande.user.nom }} {{ commande.user.nom }}</td>
            <td>{{ commande.produit.title }}</td>
            <td>{{ commande.quantite }}</td>
            <td>{{ commande.produit.prix }}</td>
            <td>{{ commande.etat }}</td>
            <td>{{ commande.dateEnregistrement| date('d/m/Y à H:i:s')}}</td>
            <td>
                <a href="#" class="bi bi-pencil-square text-warning"></a>
                <a href="{{path('supprimer_commande', {id: commande.id}) }}" class="bi bi-trash3 text-danger"></a>
            </td>

        </tr>

    {% endfor %}
</tbody>
</table>


{% endblock %}