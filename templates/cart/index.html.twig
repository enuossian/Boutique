{% extends "base.html.twig" %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1 class="text-center mt-4">Panier</h1>

    {% if items %}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Titre</th>
                <th>Taille</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><img src="{{item.produit.photo}}" alt="" width=""></td>
                <td>{{item.produit.title}}</td>
                <td>{{item.produit.taille}}</td>
                <td>{{item.produit.prix}} €</td>
                <td>{{item.quantite}}</td>
                <td>{{item.produit.prix * item.quantite }}</td>
                <td><a href="{{ path('cart_remove', {id: item.produit.id}) }}" class"btn-sm btn-danger">x</a></td>
            </tr>
        {% endfor %}
        
        </tbody>
        <tfoot>
            <tr>
                <td colspan = "3" class="text-end">Total</td>
                <td colspan = "2" >{{total}}</td>
            </tr>
        </tfoot>
    </table>


    {% else %}
    <h2 class="text-center mt-5">Le panier est vide</h2>
    {% endif %}


{% endblock %}
