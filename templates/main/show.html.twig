{% extends "base.html.twig" %}
{% block title %}Produit{% endblock %}

{% block body %}
    <div class="container col-6 mt-5">
        <div class="card border-primary mb-3">
        <div class="card-header text-center">
            <img src="{{ asset('img/upload/' ~ produit.photo) }}" class="img-fluid rounded-start w-25" alt="...">
        </div>
        <div class="card-body">
            <h4 class="card-title text-center fw-bold fs-2">{{ produit.title }}</h4>
        </div >
        <div class="text-center">
            <p class="fw-bold">{{  produit.prix }} €</p>
            <p>TVA incluse</p>
            <p class="m-5">{{ produit.description|raw }}</p>
            <p>Nouvelle collection {{  produit.collection }}</p>
            <p>{{  produit.taille }}</p>
            <p> Composition Extérieur : Cuir De Veau 100% </p>
        </div>
    </div>

        <a href="{{path('cart_add', {id:produit.id})}}" class="btn btn-outline-dark">Ajouter au panier</a>
    
{% endblock %}